
from sparkbenchmarkmesos import SparkBenchmarkMesos
from sparkbenchmarkyarn import SparkBenchmarkYarn

class SparkBenchmarkFactory:
    def getBenchmark(self,scheduler_type,home_directory,default_master_scheduler): ### Depending on the scheduler we use the interface for the benchmark will be
        if scheduler_type=="mesos":
            return SparkBenchmarkMesos(home_directory,default_master_scheduler)
        elif scheduler_type=="yarn":
            return SparkBenchmarkYarn(home_directory,default_master_scheduler)
